---
import BaseWrapper from '../layouts/BaseWrapper.astro'
import {Profile, WorkHistory} from '../constants/resume'
import SkillList from '../components/resume/skills.jsx'
---

<style lang="css">
  .resume {
    margin: 2rem 2.5rem;
  }

  .resume hr {
    background-color: #3b82f6;
    border: 1px solid #3b82f6;
    margin: 0.8rem 0 1.2rem 0;
    width: 40px;
    height: 0.3rem;
  }

  .resume .resume-body-wrapper {
    height: 100%;
    display: flex;
    margin-top: 2rem;
    flex-direction: column;
    justify-content: center;
  }

  .resume .skills-hobbies {
    width: 30%;
    padding-top: 1rem;
    padding-right: 1rem;
    margin-right: 1rem;
  }

  .resume .skills-hobbies .skills {
    padding: 0 2rem 4rem 0;
  }

  .resume .skills-hobbies .skills h1 {
    margin: 0.6rem 0;
  }

  .resume .skills-hobbies .skills h2 {
    margin: 0.8rem 0;
    font-weight: 700;
    line-height: 1;
  }

  .resume .resume-main {
    width: 70%;
    margin: 1.5rem 0;
  }

  .resume .resume-main .profile {
    padding-bottom: 1.2rem;
  }

  .resume .resume-main .profile p {
    padding-bottom: 1.6rem;
    color: #f5f5f5;
  }

  .resume .resume-main .profile .employment-history {
    padding: 1rem 0;
    color: #f5f5f5;
  }

  .resume .resume-main .profile .employment-history .highlights {
    padding: 2rem 0 0 1.5rem;
  }
  .employment {
    color: #f5f5f5;
  }
</style>

<BaseWrapper>
  <div class="md:container md:mx-auto py-40">
    <div class="resume">
      <div class="resume-header">
        <a href="/">
          <h1 class="text-2xl md:text-7xl w-2 text-slate-100 font-extrabold">ANTHONY LOMBARDI</h1>
        </a>
        <h3 class="text-sm text-azure">
          Father &#8226; Consultant &#8226; Mentor &#8226; FullStack Engineer
        </h3>
      </div>
      <div class="resume-body-wrapper border-t-2 border-gray-c7">
        <div class="flex flex-row">
          <div class="hidden md:block flex-row skills-hobbies border-r-2 border-gray-c7">
            <div class="skills">
              <h1 class="text-2xl text-slate-100">SKILLS</h1>
              <hr />
              <div class="py-4">
                <SkillList client:only="react" />
              </div>
            </div>

            <div class="hobbies text-gray-100">
              <h1 class="text-2xl text-slate-100">HOBBIES</h1>
              <hr />
              <p>
                Spending time with my two beautiful children, Exploring the Outdoors, Building guitars && Woodworking,
                Playing Guitar, and Cooking. I am also a huge fan of the Pittsburgh Steelers and the New York Yankees.
                Life's a grand adventure, my friends, and I'm just here to soak it all in, one epic moment at a time.
                Cheers to family, hobbies, and sports fandoms that never quit!
              </p>
            </div>
          </div>
          <div class="flex-auto w-full resume-main">
            <div class="profile">
              <h1 class="text-2xl text-slate-100">PROFILE</h1>
              <hr />
              <p class="text-sm md:text-lg border-b-2 border-gray-c7 mb-8">
                {Profile}
              </p>
            </div>
            <div class="employment-history border-b-2 border-gray-c7">
              <h1 class="text-2xl text-slate-100">EMPLOYMENT HISTORY</h1>
              <hr />

              {
                WorkHistory.map((job, _i) => () => (
                  <div class="employment mb-4">
                    <div class="grid grid-cols-4">
                      <div class="col-span-3 text-left font-bold text-azure">{`${job.title}, ${job.company}`}</div>
                      <div class="text-right">{job.location}</div>
                    </div>

                    <p class="employment-date text-slate-500 opacity-75 mb-2">{job.date}</p>

                    <div class="highlights">
                      <ul class="list-inside list-disc">
                        {job.highlights.map((highlight, _index) => (
                          <li class="text-sm pb-2 md:text-lg md:pl-2">{highlight}</li>
                        ))}
                      </ul>
                    </div>
                  </div>
                ))
              }
            </div>
            <div class="education pt-5">
              <h1 class="text-2xl text-slate-100">EDUCATION</h1>
              <hr />
              <div class="grid grid-cols-4">
                <div class="text-sm md:text-lg col-span-3 text-left font-bold text-gray-100">
                  CSM, College of Westchester
                </div>
                <div class="text-sm md:text-lg text-right text-gray-100">White Plains, NY</div>
              </div>
              <p class="employment-date text-gray-100">Sep 2004 &hyphen; May 2006</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseWrapper>
