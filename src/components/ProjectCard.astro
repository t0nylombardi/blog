---
import {Icon} from 'astro-icon/components'

interface Props {
  class?: string
  right?: boolean
  link?: string
  img: string
  title: string
  technologies: string
  description: string
  width: string
}

const {width, link, img, title, technologies, description} = Astro.props
---

<div id="project" class="w-full py-16 flex flex-col md:flex-row items-center">
  <div class="w-full md:w-auto lg:flex-1 flex justify-center">
    <img src={img} class=`${width} lg:h-auto object-center object-cover md:object-cover md:object-center rounded-md` />
  </div>

  <div id="project-info" class="m-0 md:pl-16 flex-1 lg:flex-2 break-all">
    <p class="text-xl font-bold mt-6">{title}</p>
    <p class="comment mt-1 text-sm">Built with:// {technologies}</p>
    <p class="mt-2">
      {description}
    </p>
    {
      link && (
        <div class="mt-2 text-sm text-[#95AAFB]">
          <a href={link} class="flex cursor-pointer items-center">
            <span class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-[#2A337E]">
              <Icon name="mdi:link-variant" class="h-4 w-4" />
            </span>
            <span class="ml-3">{link}</span>
          </a>
        </div>
      )
    }
  </div>
</div>

<style>
  @media (min-width: 768px) {
    #project:nth-child(2n) {
      flex-direction: row-reverse;
    }

    #project:nth-child(2n) #project-info {
      padding-right: 4rem;
      padding-left: 0;
    }
  }

  .comment {
    color: #7790a8;
    font-weight: 400;
  }
</style>
